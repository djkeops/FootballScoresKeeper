<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TeamLayoutPortrait">
        <item name="android:layout_marginBottom">@dimen/team_layout_l_margin</item>
        <item name="android:layout_marginEnd">@dimen/team_layout_m_margin</item>
        <item name="android:layout_marginLeft">@dimen/team_layout_m_margin</item>
        <item name="android:layout_marginRight">@dimen/team_layout_m_margin</item>
        <item name="android:layout_marginStart">@dimen/team_layout_m_margin</item>
        <item name="android:layout_marginTop">@dimen/team_layout_l_margin</item>
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:elevation">@dimen/normal_elevation</item>
    </style>

    <style name="TeamLayoutLand">
        <item name="android:layout_marginBottom">@dimen/team_layout_s_margin</item>
        <item name="android:layout_marginEnd">@dimen/team_layout_l_margin</item>
        <item name="android:layout_marginLeft">@dimen/team_layout_l_margin</item>
        <item name="android:layout_marginRight">@dimen/team_layout_l_margin</item>
        <item name="android:layout_marginStart">@dimen/team_layout_l_margin</item>
        <item name="android:layout_marginTop">@dimen/team_layout_s_margin</item>
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:elevation">@dimen/normal_elevation</item>
    </style>

    <style name="ScoreTextView">
        <item name="android:fontFamily">@font/scoreboard</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ScoreButton">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:text">@string/button_text</item>
        <item name="android:textColor">@android:color/white</item>
        <!--image resource: https://clipartpng.com/-->
        <item name="android:drawableLeft">@drawable/ball_s</item>
        <item name="android:drawableStart">@drawable/ball_s</item>
    </style>

    <style name="CardsTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/cards_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:text">@string/reset</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>